<%- include('partials/head.ejs') %>

<title>Login</title>
</head>
<body>
    <div class="container-fluid">
            <!--Menu-->
            <%- include('partials/menu.ejs') %>   
    </div>
    <hr>
    <main class="my-5">
        <div class="container login my-5 py-5">
            <div class="row justify-content-center">
                <div class="col-md-4 text-center">
                    <div class="card shadow rounded">
                        <div class="text-center">
                            <strong class="display-6 text-center text-roxo">Acesso <img src="img/iconLogin.svg" class="text-primary px-2 img-fluid"></img></strong>
                        </div>
                        <div class="card-body navddg">
                            <form method="post" action="/login">
                                <div class="form-floating mb-2">
                                    <input type="email" class="form-control" name="email" autofocus placeholder="Login">
                                    <label for="floatingInput">Login</label>
                                </div>
                                <div class="form-floating">
                                    <input type="password" class="form-control" name="senha" placeholder="Senha">
                                    <label for="floatingPassword">Senha</label>
                                </div>
                                <div><input type="submit" value="Enviar" class="w-100 py-2 mt-3 mb-1 btn btn-lg btn-warning" /></div>
                                
                            </form>
                            <% if (dados.autenticado==false){%>
                                <div class="alert alert-danger" role="alert">
                                    <%= dados.message %>
                                  </div>
                            <% } %>
			     <a class="navbar navbar-nav nav-item nav-link" href="/cadastrar/usuario">Nova Conta</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

  

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>

</html>